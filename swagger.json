{
  "openapi": "3.0.4",
  "info": {
    "title": "ProductApi",
    "version": "1.0"
  },
  "paths": {
    "/api/Auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Authenticates a user and creates an authentication cookie.",
        "description": "Sample request:\n\n    POST /api/auth/login\n    {\n       \"username\": \"admin\",\n       \"password\": \"password123\"\n    }\n    \nThe authentication cookie will be valid for 24 hours.",
        "requestBody": {
          "description": "The login credentials containing username and password.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful - authentication cookie created."
          },
          "401": {
            "description": "Invalid username or password.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Auth/logout": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Logs out the current user by clearing the authentication cookie.",
        "description": "Sample request:\n\n    POST /api/auth/logout\n    \nThis endpoint clears the authentication cookie, logging out the user.",
        "responses": {
          "200": {
            "description": "Logout successful - authentication cookie cleared."
          }
        }
      }
    },
    "/api/Auth/status": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Checks the current authentication status of the user.",
        "description": "Sample request:\n\n    GET /api/auth/status\n    \nReturns { \"authenticated\": true, \"username\": \"admin\" } if logged in,\nor { \"authenticated\": false } if not logged in.",
        "responses": {
          "200": {
            "description": "Returns authentication status and username if logged in."
          }
        }
      }
    },
    "/api/Products": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Retrieves all products from the inventory.",
        "description": "Sample request:\n\n    GET /api/products\n    \nThis endpoint is publicly accessible and does not require authentication.",
        "responses": {
          "200": {
            "description": "Returns the list of all products.",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Product"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Products"
        ],
        "summary": "Creates a new product in the inventory.",
        "description": "Sample request:\n\n    POST /api/products\n    {\n       \"name\": \"Wireless Mouse\",\n       \"description\": \"Ergonomic wireless mouse with USB receiver\",\n       \"price\": 29.99,\n       \"stock\": 50\n    }\n    \nThis endpoint requires authentication. Include the authentication cookie in the request.",
        "requestBody": {
          "description": "The product information to create.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductCreateDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductCreateDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ProductCreateDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Product created successfully.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "401": {
            "description": "User is not authenticated.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Products/{id}": {
      "get": {
        "tags": [
          "Products"
        ],
        "summary": "Retrieves a specific product by its ID.",
        "description": "Sample request:\n\n    GET /api/products/1\n    \nThis endpoint is publicly accessible and does not require authentication.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The unique identifier of the product.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the requested product.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "404": {
            "description": "Product with the specified ID not found.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": [
          "Products"
        ],
        "summary": "Updates an existing product's information.",
        "description": "Sample request:\n\n    PUT /api/products/1\n    {\n       \"name\": \"Updated Product Name\",\n       \"price\": 149.99\n    }\n    \nAll fields are optional. Only include the fields you want to update.\nThis endpoint requires authentication. Include the authentication cookie in the request.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The unique identifier of the product to update.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "description": "The product fields to update (all fields are optional).",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductUpdateDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ProductUpdateDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ProductUpdateDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Product updated successfully.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Product"
                }
              }
            }
          },
          "401": {
            "description": "User is not authenticated.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Product with the specified ID not found.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Products"
        ],
        "summary": "Deletes a product from the inventory.",
        "description": "Sample request:\n\n    DELETE /api/products/1\n    \nThis endpoint requires authentication. Include the authentication cookie in the request.\nThis operation is permanent and cannot be undone.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The unique identifier of the product to delete.",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product deleted successfully."
          },
          "401": {
            "description": "User is not authenticated.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Product with the specified ID not found.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Reservations": {
      "post": {
        "tags": [
          "Reservations"
        ],
        "summary": "Creates a reservation for a product.",
        "description": "Sample request:\n\n    POST /api/reservations\n    {\n       \"productId\": 1,\n       \"quantity\": 2,\n       \"ttlMinutes\": 15\n    }\n    \nThis endpoint requires authentication. Include the authentication cookie in the request.\nThe reservation will automatically expire after the TTL (default 15 minutes).",
        "requestBody": {
          "description": "The reservation request containing productId, quantity, and optional TTL.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ReserveRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ReserveRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ReserveRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Reservation created successfully.",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request - validation errors or insufficient stock.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "401": {
            "description": "User is not authenticated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Product not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Reservations/{id}": {
      "get": {
        "tags": [
          "Reservations"
        ],
        "summary": "Retrieves a specific reservation by its ID.",
        "description": "Sample request:\n\n    GET /api/reservations/3fa85f64-5717-4562-b3fc-2c963f66afa6\n    \nThis endpoint requires authentication.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The unique identifier of the reservation.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the requested reservation.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid reservation ID format.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "401": {
            "description": "User is not authenticated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Reservation not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Reservations"
        ],
        "summary": "Cancels an active reservation and returns stock to inventory.",
        "description": "Sample request:\n\n    DELETE /api/reservations/3fa85f64-5717-4562-b3fc-2c963f66afa6\n    \nThis endpoint requires authentication.\nOnly active reservations can be cancelled.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The unique identifier of the reservation to cancel.",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Reservation cancelled successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request - reservation already completed or expired.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "401": {
            "description": "User is not authenticated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Reservation not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Reservations/checkout": {
      "post": {
        "tags": [
          "Reservations"
        ],
        "summary": "Checks out a reservation, completing the order.",
        "description": "Sample request:\n\n    POST /api/reservations/checkout\n    {\n       \"reservationId\": \"3fa85f64-5717-4562-b3fc-2c963f66afa6\"\n    }\n    \nThis endpoint requires authentication.\nThe reservation must be active and not expired to complete checkout.",
        "requestBody": {
          "description": "The checkout request containing the reservationId.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CheckoutRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CheckoutRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CheckoutRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Checkout completed successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ReservationDto"
                }
              }
            }
          },
          "400": {
            "description": "Invalid request - reservation expired or invalid status.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "401": {
            "description": "User is not authenticated.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Reservation not found.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "description": "Gets or sets the username for authentication.",
            "nullable": true,
            "example": "admin"
          },
          "password": {
            "type": "string",
            "description": "Gets or sets the password for authentication.",
            "nullable": true,
            "example": "password123"
          }
        },
        "additionalProperties": false,
        "description": "Request model for user authentication."
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": {}
      },
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Gets or sets the unique identifier for the product.",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "description": "Gets or sets the name of the product.",
            "nullable": true
          },
          "description": {
            "type": "string",
            "description": "Gets or sets the description of the product.",
            "nullable": true
          },
          "price": {
            "type": "number",
            "description": "Gets or sets the price of the product in dollars.",
            "format": "double"
          },
          "stock": {
            "type": "integer",
            "description": "Gets or sets the available stock quantity.",
            "format": "int32"
          }
        },
        "additionalProperties": false,
        "description": "Represents a product in the inventory."
      },
      "ProductCreateDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Gets or sets the name of the product.",
            "nullable": true,
            "example": "Wireless Mouse"
          },
          "description": {
            "type": "string",
            "description": "Gets or sets the description of the product.",
            "nullable": true,
            "example": "Ergonomic wireless mouse with USB receiver"
          },
          "price": {
            "type": "number",
            "description": "Gets or sets the price of the product.",
            "format": "double",
            "example": 29.99
          },
          "stock": {
            "type": "integer",
            "description": "Gets or sets the initial stock quantity.",
            "format": "int32",
            "example": 50
          }
        },
        "additionalProperties": false,
        "description": "Data transfer object for creating a new product."
      },
      "ProductUpdateDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Gets or sets the updated name of the product (optional).",
            "nullable": true,
            "example": "Updated Product Name"
          },
          "description": {
            "type": "string",
            "description": "Gets or sets the updated description of the product (optional).",
            "nullable": true,
            "example": "Updated product description"
          },
          "price": {
            "type": "number",
            "description": "Gets or sets the updated price of the product (optional).",
            "format": "double",
            "nullable": true,
            "example": 149.99
          },
          "stock": {
            "type": "integer",
            "description": "Gets or sets the updated stock quantity (optional).",
            "format": "int32",
            "nullable": true,
            "example": 25
          }
        },
        "additionalProperties": false,
        "description": "Data transfer object for updating an existing product.\nAll fields are optional - only include fields you want to update."
      },
      "ReserveRequest": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "integer",
            "description": "The ID of the product to reserve.",
            "format": "int32",
            "example": 1
          },
          "quantity": {
            "type": "integer",
            "description": "The quantity to reserve (1-1000).",
            "format": "int32",
            "example": 2
          },
          "ttlMinutes": {
            "type": "integer",
            "description": "Optional TTL in minutes for the reservation (1-60). Defaults to 15 minutes.",
            "format": "int32",
            "example": 15
          }
        },
        "additionalProperties": false,
        "description": "Request model for creating a product reservation."
      },
      "CheckoutRequest": {
        "type": "object",
        "properties": {
          "reservationId": {
            "type": "string",
            "description": "The ID of the reservation to checkout.",
            "example": "3fa85f64-5717-4562-b3fc-2c963f66afa6"
          }
        },
        "additionalProperties": false,
        "description": "Request model for checking out a reservation."
      },
      "ReservationDto": {
        "type": "object",
        "properties": {
          "reservationId": {
            "type": "string",
            "description": "The unique identifier for the reservation.",
            "example": "3fa85f64-5717-4562-b3fc-2c963f66afa6"
          },
          "productId": {
            "type": "integer",
            "description": "The ID of the reserved product.",
            "format": "int32",
            "example": 1
          },
          "quantity": {
            "type": "integer",
            "description": "The reserved quantity.",
            "format": "int32",
            "example": 2
          },
          "status": {
            "type": "string",
            "description": "The current status of the reservation (Active, Completed, Cancelled, Expired).",
            "example": "Active"
          },
          "createdAt": {
            "type": "string",
            "description": "When the reservation was created.",
            "format": "date-time",
            "example": "2025-11-30T15:00:00Z"
          },
          "expiresAt": {
            "type": "string",
            "description": "When the reservation will expire.",
            "format": "date-time",
            "example": "2025-11-30T15:15:00Z"
          },
          "completedAt": {
            "type": "string",
            "description": "When the reservation was completed or cancelled.",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Response model for a reservation."
      }
    }
  },
  "tags": [
    {
      "name": "Auth"
    },
    {
      "name": "Products"
    },
    {
      "name": "Reservations"
    }
  ]
}
