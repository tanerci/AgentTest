{
  "version": "1.0",
  "rules": [
    {
      "id": "CS001",
      "name": "PascalCaseClassNames",
      "description": "Class names must use PascalCase",
      "severity": "error",
      "pattern": "^[A-Z][a-zA-Z0-9]*$"
    },
    {
      "id": "CS002",
      "name": "CamelCasePrivateFields",
      "description": "Private fields should use camelCase with underscore prefix",
      "severity": "warning",
      "pattern": "^_[a-z][a-zA-Z0-9]*$"
    },
    {
      "id": "CS003",
      "name": "AsyncMethodSuffix",
      "description": "Async methods must end with 'Async'",
      "severity": "error",
      "pattern": ".*Async$"
    },
    {
      "id": "CS004",
      "name": "ControllerSuffix",
      "description": "Controller classes must end with 'Controller'",
      "severity": "error",
      "pattern": ".*Controller$"
    },
    {
      "id": "CS005",
      "name": "DtoSuffix",
      "description": "DTO classes should end with 'Dto' or 'Request'/'Response'",
      "severity": "warning",
      "pattern": ".*(Dto|Request|Response)$"
    },
    {
      "id": "CS006",
      "name": "NoMagicNumbers",
      "description": "Avoid magic numbers, use named constants",
      "severity": "warning"
    },
    {
      "id": "CS007",
      "name": "MaxMethodLength",
      "description": "Methods should not exceed 50 lines",
      "severity": "warning",
      "threshold": 50
    },
    {
      "id": "CS008",
      "name": "RequireXmlComments",
      "description": "Public methods and classes should have XML documentation",
      "severity": "info",
      "scope": ["public"]
    }
  ],
  "formatting": {
    "indentation": "spaces",
    "indentSize": 4,
    "newlineStyle": "lf",
    "braceStyle": "newline"
  },
  "namingConventions": {
    "classes": "PascalCase",
    "interfaces": "IPascalCase",
    "methods": "PascalCase",
    "properties": "PascalCase",
    "privateFields": "_camelCase",
    "parameters": "camelCase",
    "localVariables": "camelCase",
    "constants": "UPPER_CASE"
  }
}
